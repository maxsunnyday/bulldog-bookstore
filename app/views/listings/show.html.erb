<h1><%= @listing.book.title %></h1>
<h2>Author: <%= @listing.book.author %></h2>
<h5>ISBN number: <%= @listing.book.isbn_number %></h5>
<h2>Price: <%= @listing.price %></h2>
<h2>Seller: <%= @listing.user.username %></h2>
<h3>Email: <%= @listing.user.email %></h3>

<%= form_tag "/orders/#{@order.id}", method: :patch do %>
    <%= hidden_field_tag :listing_id, @listing.id %>
    <%= submit_tag "Add to cart" %>
<% end %>