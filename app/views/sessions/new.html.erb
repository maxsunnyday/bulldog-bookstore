<!-- This is the login page -->

<div class="login">
    <div class="col">
    <%= image_tag "bulldog.jpg", class: "rounded mx-auto d-block", size: "200x200" %>
    <h1 class="h3 mb-3 login">Please Sign In</h1>
    <%= bootstrap_form_tag url: "/sessions" do |f| %>
        <%= f.text_field :username %>
        <%= f.password_field :password %>
        <%= f.submit "Log in" %>
    <% end %>
    </div>
</div>
